.container {
	font-weight: bold;
	text-transform: uppercase;
	text-align: center;
	color: #3a3a3a;
	padding: 0;
	font-size: 12px;
	cursor: pointer;
	box-shadow: 0 1px 1px rgba(#000 , .05);
	background: linear-gradient(to bottom, #fff 0%, #f5f5f5 100%);
	border: 1px solid #d9d9d9;
	box-sizing: border-box;
	position: relative;

	&:active {
		top: 1px;
	}

	&:hover:not(.buttonActive):not([disabled]) {
		border-color: #05aae6;
		box-shadow: 0 0 0 1px #05aae6;
	}

	&[disabled] {
		opacity: .6;
		cursor: default

		&:active {
			top: 0;
		}
	}
}

.buttonActive {
	border-radius: 1px;
	border-color: #267c0c;
	box-shadow: 0 1px 2px rgba(0,0,0,0.5) inset,0 0 0 1px #267c0c;
	cursor: default;

	&:after {
		content: '';
		position: absolute;
		right: 0;
		bottom: 0;
		height: 0;
		width: 0;
		border-width: 3px;
		border-color: transparent #267c0c #267c0c transparent;
		border-style: solid;
	}
}