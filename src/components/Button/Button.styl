.container {
	line-height: 32px;
	font-weight: bold;
	text-transform: uppercase;
	text-align: center;
	color: #3a3a3a;
	box-shadow: 0 1px 1px rgba(#000 , .05);
	border: 1px solid #d9d9d9;
	height: 32px;
	box-sizing: border-box;
	position: relative;

	&:active {
		top: 1px;
	}

	&:hover {
		border-color: #05aae6;
		box-shadow: 0 0 0 1px #05aae6;
	}

	&[disabled] {
		opacity: .6;
		cursor: default

		&:active {
			top: 0;
		}
	}

	&Active {
		border-radius: 1px;
		box-shadow: 0 1px 2px rgba(0,0,0,0.5) inset,0 0 0 1px #267c0c;

		&:after {
			content: '';
			position: absolute;
			right: 0;
			bottom: 0;
			height: 0;
			width: 0;
			border-width: 3px;
			border-color: transparent #267c0c #267c0c transparent;
			border-style: solid;
		}
	}
}